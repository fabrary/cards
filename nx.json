{
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": ["build", "test", "tts", "sitemap", "full"]
      }
    }
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["update", "prebuild", "^build"],
      "outputs": ["{projectRoot}/dist"]
    },
    "full": {
      "dependsOn": ["update", "^full"],
      "outputs": ["{projectRoot}/dist"]
    },
    "test": {
      "outputs": ["{projectRoot}/coverage"]
    },
    "tts": {
      "outputs": ["{projectRoot}/tts"]
    },
    "sitemap": {
      "outputs": ["{projectRoot}/sitemap"]
    }
  }
}
